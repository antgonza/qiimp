{
  "title": "Metadata Fields",
  "type": "array",
  "format": "table",
  "items": {
    "title": "Metadata Field",
    "type": "object",
    "properties": {
      "field_name": {
        "title": "Field Name",
        "type": "string",
        "minLength": 1,
        "maxLength": 250
      },
      "type_specific_contents": {
        "title": "Kind of Data",
        "type": "object",
        "oneOf": [
          {
            "title":"Free-Form Text",
            "properties": {
              "text_minimum": {
                "title": "Minimum Text Length",
                "description": "If there is no minimum length, enter zero.",
                "type": "integer"
              },
              "text_maximum": {
                "title": "Maximum Text Length",
                "description": "If there is no maximum length, enter zero.",
                "type": "integer"
              }
            }
          },
          {
            "title": "Boolean",
            "properties": {
              "boolean_true": {
                "title": "True Value",
                "type": "string"
              },
              "boolean_false": {
                "title": "False Value",
                "type": "string"
              }
            },
            "type": "object"
          },
          {
            "title": "Categorical",
            "properties": {
              "categorical_values": {
                "title": "Allowed Values",
                "description": "Enter allowed values separated by commas.",
                "type": "string"
              }
            },
            "type": "object"
          },
          {
            "title": "Continuous",
            "properties": {
              "continuous": {
                "title": "Kind of Measurement",
                "type": "object",
                "anyOf": [
                  {
                    "title": "Whole Number",
                    "properties": {
                      "integer_minimum": {
                        "title": "Minimum Value",
                        "type": "integer"
                      },
                      "integer_maximum": {
                        "title": "Maximum Value",
                        "type": "integer"
                      }
                    },
                    "type": "object"
                  },
                  {
                    "title": "Decimal",
                    "properties": {
                      "decimal_minimum": {
                        "title": "Minimum Value",
                        "type": "number"
                      },
                      "decimal_maximum": {
                        "title": "Maximum Value",
                        "type": "number"
                      }
                    },
                    "type": "object"
                  },
                  {
                    "title": "Date/Time",
                    "properties": {
                      "datetime_minimum": {
                        "title": "Minimum Value",
                        "type": "date-time"
                      },
                      "datetime_maximum": {
                        "title": "Maximum Value",
                        "type": "date-time"
                      }
                    },
                    "type": "object"
                  }
                ]
              },
              "unit": {
                "title": "Unit",
                "type": "string"
              }
            },
            "type": "object"
          }
        ]
      },
      "default_setting": {
        "title": "Set Default",
        "type": "object",
        "oneOf": [
          {
              "title": "True",
              "type": "object",
              "properties": {
                    "default_value": {
                        "title":"Default Value",
                        "type": "string",
                        "default": "Not Provided"
                     }
               }
          },
          {
            "title": "False",
            "type": "object",
            "properties": {
               "default_value": {
                   "title":"No Default Allowed",
                   "type":"null"
                }
             }
          }
        ],
        "default":"True"
      },
      "missing_vals_setting": {
        "title": "Allow Missing Values",
        "type": "object",
        "oneOf": [
          {
              "title": "True",
              "type": "object",
              "properties": {
                    "allowed_missing_vals": {
                        "title":"Allowed Missing Values",
                        "description": "Enter allowed values separated by commas.",
                        "type": "string",
                        "default": "Not Applicable, Not Provided, Restricted"
                     }
               }
          },
          {
            "title": "False",
            "type": "object",
            "properties": {
               "allowed_missing_vals": {
                   "title":"No Missing Values Allowed",
                   "type":"null"
                }
             }
          }
        ],
        "default":"True"
      }
    }
  }
}