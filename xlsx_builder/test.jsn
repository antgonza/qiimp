{
  "title": "Metadata Fields",
  "type": "array",
  "format": "table",
  "items": {
    "title": "Metadata Field",
    "type": "object",
    "properties": {
      "field_name": {
        "title": "Field Name",
        "type": "string",
        "minLength": 1,
        "maxLength": 250
      },
      "type_specific_contents": {
        "title": "Kind of Data",
        "type": "object",
        "oneOf": [
          {
            "title": "Boolean",
            "properties": {
              "true_value": {
                "title": "True Value",
                "type": "string"
              },
              "false_value": {
                "title": "False Value",
                "type": "string"
              }
            },
            "type": "object"
          },
          {
            "title": "Categorical",
            "properties": {
              "allowed_values": {
                "title": "Allowed Values",
                "type": "string"
              }
            },
            "type": "object"
          },
          {
            "title": "Continuous",
            "properties": {
              "measurement": {
                "title": "Kind of Measurement",
                "type": "object",
                "anyOf": [
                  {
                    "title": "Whole Number",
                    "properties": {
                      "minimum_integer": {
                        "title": "Minimum Value",
                        "type": "integer"
                      },
                      "maximum_integer": {
                        "title": "Maximum Value",
                        "type": "integer"
                      }
                    },
                    "type": "object"
                  },
                  {
                    "title": "Decimal",
                    "properties": {
                      "minimum_decimal": {
                        "title": "Minimum Value",
                        "type": "number"
                      },
                      "maximum_decimal": {
                        "title": "Maximum Value",
                        "type": "number"
                      }
                    },
                    "type": "object"
                  },
                  {
                    "title": "Date/Time",
                    "properties": {
                      "minimum_datetime": {
                        "title": "Minimum Value",
                        "type": "date-time"
                      },
                      "maximum_datetime": {
                        "title": "Maximum Value",
                        "type": "date-time"
                      }
                    },
                    "type": "object"
                  }
                ]
              },
              "unit": {
                "title": "Unit",
                "type": "string"
              }
            },
            "type": "object"
          }
        ]
      },
      "default_value": {
        "title": "Set Default",
        "type": "object",
        "oneOf": [
          {
              "title": "True",
              "type": "object",
              "properties": {
                    "default_value_inner": {
                        "title":"Default Value",
                        "type": "string",
                        "default": "Not Provided"
                     }
               }
          },
          {
            "title": "False",
            "type": "null"
          }
        ],
        "default":"True"
      },
      "allowed_missing_vals": {
        "title": "Allow Missing Values",
        "type": "object",
        "oneOf": [
          {
              "title": "True",
              "type": "object",
              "properties": {
                    "allowed_missing_values_list": {
                        "title":"Allowed Missing Values",
                        "type": "string",
                        "default": "Not Applicable, Not Provided, Restricted"
                     }
               }
          },
          {
            "title": "False",
            "type": "null"
          }
        ],
        "default":"True"
      }
    }
  }
}